@model UpdateCategoryDto

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <input type="hidden" class="form-control" asp-for="CategoryID" />
                    <label>Kategori Adı</label>
                    <input type="text" class="form-control" asp-for="CategoryName" />
                    <br />
                    <label>Kategori Görseli</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <br />
                    <button class="btn btn-primary">Kategoriyi Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>