@model UpdateCommentDto

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kullanıcı Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <input type="hidden" class="form-control" asp-for="UserCommentId" />
                    <input type="text" class="form-control" asp-for="ProductId" />
                    <label>Kullanıcı Adı Soyadı</label>
                    <input type="text" class="form-control" asp-for="NameSurname" />
                    <br />
                    <label>Kullanıcı Görseli</label>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                    <br />
                    <label>Kullanıcı Email Adresi</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <br />
                    <label>Kullanıcı Puanı</label>
                    <input type="number" class="form-control" asp-for="Rating" />
                    <br />
                    <label>Yorum Tarihi</label>
                    <input type="date" class="form-control" asp-for="CreatedDate" />
                    <br />
                    <label>Yorum</label>
                    <textarea class="form-control" asp-for="CommentDetail" rows="3"> </textarea>
                    <br />
                    <button class="btn btn-success">Yorumu Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>