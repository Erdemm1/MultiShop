@model UpdateProductDetailDto

@{
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Açıklaması Ve Bilgisi Güncelleme Sayfası</h4>
                <br />
                <form method="post">
                    <input type="hidden" class="form-control" asp-for="ProductDetailId" />
                    <input type="hidden" class="form-control" asp-for="ProductId" />
                    <label>Ürün Açıklaması</label>
                    <textarea rows="5" class="form-control" asp-for="ProductDescription"></textarea>
                    <br />
                    <label>Ürün Bilgisi</label>
                    <textarea rows="5" class="form-control" asp-for="ProductInfo"></textarea>
                    <br />
                    <button class="btn btn-success">Ürün Bilgileri Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</section>